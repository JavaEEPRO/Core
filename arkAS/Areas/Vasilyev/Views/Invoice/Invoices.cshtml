@using arkAS.BLL
@model arkAS.Areas.Vasilyev.Models.InvoiceViemModel

@{
    ViewBag.Title = "Работа со счетами";
    var js = new System.Web.Script.Serialization.JavaScriptSerializer();
}

@Styles.Render("~/content/Cabinet.css")

