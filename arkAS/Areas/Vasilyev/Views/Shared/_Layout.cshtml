@using Glimpse.Mvc.Html
<!DOCTYPE html>
<html prefix="og: http://ogp.me/ns#">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@(ViewBag.Title ?? "Документооборот (Touch)")</title>

    @Styles.Render("~/bundles/css")
    @Html.Raw(arkAS.BLL.Core.CoreManager.StyleForDev())
    @RenderSection("css", false)
    @RenderSection("ogp", false)

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Ark AS", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Документы", "Documents", new { area = "Vasilyev", controller = "Document" })</li>
                    <li>@Html.ActionLink("Счета", "Invoices", new { area = "Vasilyev", controller = "Invoice" })</li>
                    <li>@Html.ActionLink("Почта", "Mails", new { area = "Vasilyev", controller = "Mail" })</li>
                    <li>@Html.ActionLink("Контрагенты", "Contractors", new { area = "Vasilyev", controller = "Contractor" })</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>

        </div>
    </div>
    <div class="container body-content">
        <div class="body-content2">
            @RenderBody()
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Система разработки CRM (личных кабинетов) на заказ Ark AS (Web-automation.ru)</p>
        </footer>
    </div>

    <div class="modal fade" id="asModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Modal title</h4>
                </div>
                <div class="modal-body">
                    <p>One fine body&hellip;</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
                    <button type="button" class="btn btn-primary">ОК</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->

    <script src="~/js/AS/as.resources.js" charset="windows-1251"></script>
    @Scripts.Render("~/bundles/libs")
    @Scripts.Render("~/bundles/as")
    @Scripts.Render("~/bundles/highcharts")
    <script src="~/js/AS/controls/as.opinion.js"></script>
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
