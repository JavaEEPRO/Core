@using Glimpse.Mvc.Html
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@(ViewBag.Title ?? "Ark AS")</title>

    @Styles.Render("~/bundles/css")
    @Styles.Render("~/Areas/Udovika/Content/style.css")

    <link href="~/content/Cabinet.css" rel="stylesheet">
    
    
    @Styles.Render("~/bundles/sb-admin-css")



    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    @Html.Raw(arkAS.BLL.Core.CoreManager.StyleForDev())
    @RenderSection("css", false)
</head>
<body>
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-inverse navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#main-menu" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="collapse navbar-collapse" id="main-menu">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Документы", "Index", new { area = "Udovika", controller = "Documents" })</li>
                        <li>@Html.ActionLink("Счета", "Invoices", new { area = "Udovika", controller = "Documents" })</li>
                        <li>@Html.ActionLink("Почта", "Mails", new { area = "Udovika", controller = "Documents" })</li>
                    </ul>
                </div>
            </div>
            <!-- /.navbar-header -->
           
            
            <!-- /.navbar-top-links -->
            <!-- /.navbar-static-side -->
        </nav>
        <!-- Page Content -->
        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="content">
                            @RenderBody()
                        </div>

                        <footer>
                            <p>&copy; @DateTime.Now.Year - Система разработки CRM </p>
                        </footer>
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->
    </div>

    <div class="modal fade" id="asModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Modal title</h4>
                </div>
                <div class="modal-body">
                    <p>One fine body&hellip;</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
                    <button type="button" class="btn btn-primary">ОК</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
    
    
    <script src="~/js/AS/as.resources.js" charset="windows-1251"></script>
    <script charset="windows-1251" src="~/js/AS/as.tools.js" type="text/javascript"></script>
    @Scripts.RenderFormat("<script type=\"text/javascript\" src=\"{0}\" charset=\"windows-1251\"></script>", "~/bundles/libs")
    @Scripts.RenderFormat("<script type=\"text/javascript\" src=\"{0}\" charset=\"windows-1251\"></script>", "~/bundles/as")
    
    <script src="~/js/AS/controls/as.createMistake.js"></script>
    <script src="~/js/AS/as.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.3/jquery-ui.min.js?modules=core,widget,mouse,sortable"></script>

    <script src="~/js/as/controls/as.selectImage.js" charset="windows-1251"></script>
    <script type="text/javascript" src="/js/uploadify/jquery.uploadify-3.1.min.js"></script>

    <script src="~/js/jquery.signalR-2.1.2.min.js"></script>
    <script src="~/signalr/hubs"></script>
    <script src="~/js/AS/controls/as.opinion.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jsrender/0.9.84/jsrender.min.js" type="text/javascript"></script>
    @Scripts.RenderFormat("<script type=\"text/javascript\" src=\"{0}\" charset=\"windows-1251\"></script>", "~/bundles/sb-admin-js")


